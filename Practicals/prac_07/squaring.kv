BoxLayout:
    orientation: 'vertical'
    # Self-Note: Outer Box
    BoxLayout:
    # Self-Note: Horizontal line
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 48
            multiline: False
            # Self-Note: Forces everything onto one line. Not functional unless big input box, lose track of input.
        Button:
            text: 'Square'
            # the following line specifies the function in the app class to call when the button is pressed
            on_press: app.handle_calculate(int(input_number.text))
        Label:
            id: output_label
            font_size: 48
            color: (0.9 , 0.6 , 0.6, 1)
            # Self-Note: Find a place for RGBA colors to save time
    BoxLayout:
    # Self-Note: Bottom box
        orientation: 'horizontal'
        Label:
            text: 'Enter a number and press "Square"'
